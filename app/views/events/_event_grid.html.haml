.grid-box.flex-align-center.m-3.p-1.event-div
  .flex-row
    .column
      = link_to event.title, event
    .column.timeArea.wrap
      .time
        = from_to_string event
      .area
        = area_link event.area
  .flex-row
    .column.inline-price
      = inline_event_price event
    .column.button
      = render "buy_button", event: event