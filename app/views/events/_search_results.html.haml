.search-results
  .flex-column.mobile-event
    %h2= t('search.results_title')
    - if @events.present?
      #containersearchgridview
        - @events.group_by {|i| i.start_time.to_date }.sort.each do |date, events|
          %h4.pl-3.p-1.mt-3.title.white.bg-red= l(date, format: :medium_long)
          .listview.samf-container.mb-3{:style => "display:none;"}
            %table.mb-3
              %tbody
                = render events.sort_by{|event| event.start_time}

          .gridview.upcoming-events.flex-row.mt-3.wrap{:style => "justify-content: flex-start;"}
            -events.sort_by{|event| event.start_time}.each do |e|
              = render "events/event_style", event: e

    - else
      %p= t('search.no_results')
