= semantic_form_for @article do |f|
  = f.inputs do
    = f.input :title_no
    = f.input :title_en
    = f.input :lead_paragraph_no, input_html: { rows: 2 }
    = f.input :lead_paragraph_en, input_html: { rows: 2 }
    = f.input :content_no, hint: t('common.markdown_hint').html_safe
    = f.input :content_en, hint: t('common.markdown_hint').html_safe

    = f.input :published, as: :boolean
    = f.input :publish_at, input_html: { class: "datetimepicker", value: @article.publish_at}, as: :string


  = render 'images/imagepicker', f: f
  = f.actions do
    = f.action :submit
