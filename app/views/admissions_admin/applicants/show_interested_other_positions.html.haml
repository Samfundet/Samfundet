%h2 #{t('admissions_admin.applicant_dont_get_position')}
%p #{t('admissions_admin.reserved_applicants')}

- @applicants.each do |applicant|
  .applicant
    %h3
      = link_to applicant.full_name, applicant
      \-
      = applicant.phone
      \-
      = applicant.email
    - applicant.job_applications.each do |application|
      %p
        = application.job.group.name
        \-
        = application.job.title
        %strong= application.interview.acceptance_status_string

  %br

- if @applicants.blank?
  %p
    #{t('admissions_admin.reprioritisation_deadline')}
    = l(@admission.admin_priority_deadline)
