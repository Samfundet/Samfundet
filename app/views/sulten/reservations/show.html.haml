      = @reservation.internal_comment

%p
  = link_to t("crud.edit"), [:edit, @reservation]
  = link_to t("crud.destroy"), @reservation, method: :delete, data: {confirm: t("crud.confirm")}
  = link_to t("common.back"), sulten_reservations_path
