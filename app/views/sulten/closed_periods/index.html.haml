- set_title t('sulten.closed_periods.index_title')

%table
  %caption
    %h2= t('sulten.closed_periods.table_caption')
  %tr
    %th= t('sulten.closed_periods.message')
    %th= t('sulten.closed_periods.from')
    %th= t('sulten.closed_periods.to')
    %th= t('crud.edit')
    %th= t('crud.destroy')
  - @current_and_future_closed_times.each do |ecp|
    %tr
      %td
        %p
          :markdown
            #{ecp.message}
      %td= ecp.closed_from.to_date
      %td= ecp.closed_to.to_date
      %td= link_to t('crud.edit'), edit_sulten_closed_period_path(ecp.id)
      %td= link_to t('crud.destroy'), sulten_closed_period_path(ecp.id), confirm: t('crud.confirm'), method: :delete
  %tfoot
    %tr
      %td{colspan: 5}= link_to t('sulten.closed_periods.add_new_link'), new_sulten_closed_period_path

= link_to t('common.back'), members_control_panel_path
