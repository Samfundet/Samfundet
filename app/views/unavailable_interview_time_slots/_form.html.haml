= link_to admission_unavailable_interview_time_slots_path do
  .samf-button.plain.mt-3
    = t("common.back")
- redirect_url = admission_unavailable_interview_time_slots_path
- if action_name == 'edit'
  - redirect_url = admission_unavailable_interview_time_slot_path
= semantic_form_for @unavailable_interview_time_slot, :url => redirect_url, data: {type: 'json'} do |form|
  = form.inputs do
    %div{:style=>"flex-basis:100%;"}
      .flex-row
        != form.input :start_time,
                      as: :string,
                      label: t("unavailable_interview_time_slots.form.start"),
                      input_html: { class: "datetimepicker",
                                    value: @unavailable_interview_time_slot.start_time,
                                    :readonly => "readonly",
                                    placeholder: "DD.MM.YYYY HH:MM" }
        != form.input :end_time,
                      as: :string,
                      label: t("unavailable_interview_time_slots.form.end"),
                      input_html: { class: "datetimepicker",
                                    value: @unavailable_interview_time_slot.end_time,
                                    :readonly => "readonly",
                                    placeholder: "DD.MM.YYYY HH:MM" }
      %hr

    = form.actions do
      - if action_name == 'new' || action_name == 'create'
        = form.action :submit, label: t("unavailable_interview_time_slots.form.create")
      - elsif action_name == 'edit' || action_name == 'show'
        = form.action :submit, label: t("unavailable_interview_time_slots.form.update")
