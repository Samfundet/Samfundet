= link_to admissions_admin_admission_group_job_interview_time_slots_path do
  .samf-button.plain.mt-3
    = t("common.back")
= semantic_form_for @interview_time_slot, :url => admissions_admin_admission_group_job_interview_time_slot_path, data: {type: 'json'} do |form|
  = form.inputs do
    %div{:style=>"flex-basis:100%;"}
      .flex-row
        = form.input :location, label: t("interview_time_slots.form.location")
        = form.input :comment, label: t("interview_time_slots.form.comment")
      .flex-row
        != form.input :start_time,
                      as: :string,
                      label: t("interview_time_slots.form.start"),
                      input_html: { class: "datetimepicker",
                                    value: @interview_time_slot.start_time,
                                    :readonly => "readonly",
                                    placeholder: "DD.MM.YYYY HH:MM" }
        != form.input :end_time,
                      as: :string,
                      label: t("interview_time_slots.form.end"),
                      input_html: { class: "datetimepicker",
                                    value: @interview_time_slot.end_time,
                                    :readonly => "readonly",
                                    placeholder: "DD.MM.YYYY HH:MM" }
      %hr

    = form.actions do
      = form.action :submit, label: t("interview_time_slots.form.update")
