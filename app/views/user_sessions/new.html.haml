- set_title t("user_sessions.new.title")

%h1.text-Align=t("member_sessions.new.title")

.flex-column.mt-3
  .login-form.member
    = render 'member_sessions/form', redirect_to: @redirect_to

  - if @active_admissions_exist
    %hr
    .center.mt-2
      .text-Align=t("applicants.are_you_an_applicant")
      = link_to applicant_login_path do
        .samf-button.plain
          = t("applicants.login_title")
