- set_title t('roles.title')

.section
  %h2= t('roles.heading')
  %br
  = link_to t('roles.one_year_old_title'), one_year_old_roles_path
  %br
  %br

  %table.table-highlight-rows
    %tr
      %th= t('roles.role_title')
      %th= t('roles.role_description')
      %th
        &nbsp;
    - @roles.each do |role|
      %tr
        %td
          = link_to role_path role do
            = role.title
        %td
          = role.description
        %td
          - if can?(:edit, Role)
            = link_to t('roles.edit_role'), edit_role_path(role)
  - if can?(:create, Role)
    %p= link_to t('roles.create_role'), new_role_path,
                { class: "sexybutton sexysimple sexyred" }
