.nybygg-countdown
  .title
    = t 'site.index.nybygg_opening_in'
  %span{ id: 'nybygg-countdown-date', class: 'hidden', 'data-date': @nybygg_countdown_date.strftime('%Y-%m-%d %H:%M:%S%z') }
  - if @nybygg_diff >= 0
    .countdown
      .section
        .timer#nybygg-days
          = @days_left
        = t 'site.index.days'
      .section
        .timer#nybygg-hours
          = @hours_left
        = t 'site.index.hours'
      .section
        .timer#nybygg-minutes
          = @minutes_left
        = t 'site.index.minutes'
      .section
        .timer#nybygg-seconds
          = @seconds_left
        = t 'site.index.seconds'
  - else
    .open
      = t 'site.index.nybygg_is_open'
