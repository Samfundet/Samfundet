%table.campus
  %thead
    %tr
      %th= t("campus.name")
      %th= t("crud.created_at")
      %th= t("crud.updated_at")
      %th= "Antall Søkere"
      %th= "Søkere dette opptaket"
      - if permitted_to? :edit
        %th
      - if permitted_to? :destroy
        %th

  %tbody
    - @campuses.each do |campus|
      %tr
        %td= link_to campus.name, campus
        %td= campus.created_at
        %td= campus.updated_at
        %td= campus.number_of_applicants
        %td= campus.number_of_applicants_current_admission
        - if permitted_to? :edit
          %td= link_to t("crud.edit"), edit_campus_path(campus)
          - if campus.active?
            %td= link_to t("Deaktiver"), campus_deactivate_path(campus)
          - else
            %td= link_to t("Aktiver"), campus_activate_path(campus)

