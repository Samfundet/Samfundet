= semantic_form_for @everything_closed_period do |f|
  = f.inputs do
    = f.input :message_no
    = f.input :message_en
    = f.input :event_message_no, input_html: { value: 'Samfundet er stengt.'}
    = f.input :event_message_en, input_html: { value: 'Samfundet is closed.'}
    = f.input :closed_from, as: :string,
      input_html: { class: "datepicker", value: f.object.closed_from.to_date }
    = f.input :closed_to, as: :string,
      input_html: { class: "datepicker", value: f.object.closed_to.to_date }
  = f.actions
