%br
%h2
  = t("crowd_funding.competition.title")

= simple_format(t("crowd_funding.competition.body"))
= simple_format(t("crowd_funding.competition.read_more"))

%h2
  = t("crowd_funding.competition.student_union")
.crowd-funding-comp
  - @supporters_union.each_with_index do |supporter, index|
    .supporter
      .name
        = "#{index + 1}. #{supporter.name}"
      .line{style: "width: #{(supporter.amount.to_f/@largest.amount)*100}%"}
        %p.amount= supporter.amount.to_s + " kr"
  .supporter
    %div
    .points
      - @points.each do |point|
        .point
          = point.to_s + " kr"

%h2
  = t("crowd_funding.competition.group")

%h3
  =t("crowd_funding.competition.per_member")
.crowd-funding-comp
  - @supporter_group_per.each_with_index do |supporter, index|
    .supporter
      = "#{index + 1}. #{supporter.name}"
      .line{style: "width: #{((supporter.amount.to_f / supporter.donors )/@largest.amount)*100}%"}
        %p.amount= (supporter.amount / supporter.donors).to_s + " kr"
  .supporter
    %div
    .points
      - @points.each do |point|
        .point
          = point.to_s + " kr"

%h3
  =t("crowd_funding.competition.total")
.crowd-funding-comp
  - @supporters_group.each_with_index do |supporter, index|
    .supporter
      .name
        = "#{index + 1}. #{supporter.name}"
      .line{style: "width: #{(supporter.amount.to_f/@largest.amount)*100}%"}
        %p.amount= supporter.amount.to_s + " kr"
  .supporter
    %div
    .points
      - @points.each do |point|
        .point
          = point.to_s + " kr"

- if can? :manage, CrowdFundingSupporter
  .samf-button.small.mt-3
    = link_to admin_crowd_funding_supporters_path do
      = t("crowd_funding.admin.admin")
