= semantic_form_for @info_box do |f|
  %div{:style=>"flex-basis:100%;"}
    = f.inputs name:t("info_boxes.form.header") do
      .flex-row
        = f.input :title_no, label: "Tittel (Norsk)"
        = f.input :title_en, label: "Tittel (Engelsk)"
      .flex-row
        = f.input :body_no, label: "Kort beskrivelse (Norsk)"
        = f.input :body_en, label: "Kort beskrivelse (Engelsk)"
      .flex-row
        = f.input :link_no, label: "Link (Norsk)"
        = f.input :link_en, label: "Link (Engelsk)"
      .flex-row
        = f.input :start_time, label: t("info_boxes.form.start"), input_html: { class: "datetimepicker", value: @info_box.start_time}, as: :string
        = f.input :end_time, label: t("info_boxes.form.end"), input_html: { class: "datetimepicker", value: @info_box.end_time}, as: :string
      .flex-row
        = f.input :color, label: t("info_boxes.form.color"), as: :select, collection: InfoBox::COLOR.map { |k| [t("info_boxes.#{k}"), k]}
      .flex-row.mb-3
        = f.input :position, label: t("info_boxes.form.position"), as: :select, collection: 0..10, hint: t("info_boxes.form.position_explanation")
      .flex-row

        %div{:style=>"flex-basis:100%;"}
          = render 'imagepicker', f: f
          = f.input :image_state, label: "Bruk Bilde"
      %hr

    = f.actions do
      = f.action :submit