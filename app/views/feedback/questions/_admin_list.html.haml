%table.upcoming-feedbacks
  %thead
    %tr
      %th= t("feedback.questions.text")
  
      - if permitted_to? :edit
        %th
      - if permitted_to? :destroy
        %th

  %tbody
    - @questions.each do |question|
      %tr
        %td= question.text

        - if permitted_to? :edit
          %td= link_to t("crud.edit"), edit_feedback_question_path(question)

        - if permitted_to? :destroy
          %td= link_to t("crud.destroy"), feedback_question_path(question), confirm: t("feedback.confirm_delete"), method: :delete
