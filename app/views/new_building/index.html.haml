- set_open_graph_params({ title: t('site.index.og_title'), description: t('site.index.og_description'), image: 'https://www.samfundet.no/upload/images/image_files/000/001/669/original/logo_samf.no.png?1538501206'})
- set_twitter_params({ card: "summary_large_image", title: t('site.index.og_title'), description: t('site.index.og_description'), 'image:src' => 'https://www.samfundet.no/upload/images/image_files/000/001/669/original/logo_samf.no.png?1538501206'})

.pages-index
  .samf-smart-box.flex-align-center.mt-2

    .half.pr-3.ml-2.mb-2
      = image_tag "new_building/nybygg_kveld.png", alt: "Samfundet", class: "br-2 bxs"

    .auto.flex-column.flex-justify-center
      %div.pl-3.mb-1
        %h1= t("new_building.index.title")
        %p
          = t("new_building.index.intro")

      %div.flex-row.pl-3.mb-1
        = link_to "https://www.facebook.com/nybygg.samfundet" do
          .samf-button.blue.mr-2
            = "facebook"
        = link_to "https://www.instagram.com/nybygg.samfundet/" do
          .samf-button.red.ml-2
            = "instagram"

  %div.flex-row.flex-justify-around.m-3.wrap
    %h2= link_to t("new_building.index.about.title"), anchor: "about".parameterize
    %h2= link_to t("new_building.index.documents.title"), anchor: "documents".parameterize
    %h2= link_to t("new_building.index.history.title"), anchor: "history".parameterize
    %h2= link_to "FAQ", anchor: "FAQ".parameterize
    %h2= link_to t("new_building.index.table.title"), anchor: "contact".parameterize

  .samf-container.green.ml-2.mr-2.p-3.mt-3
    %h1= t("new_building.index.what.title")
    %p= t("new_building.index.what.body")

  - if (I18n.locale == :no)
    .samf-container.blue.ml-2.p-3.mt-3
      %h1= t("new_building.index.admission.title")
      %p= simple_format((t"new_building.index.admission.description"))

  .p-2

  .samf-smart-box.pt-3
    .half.mr-3.ml-2.flex-column.flex-align-center
      = image_tag "new_building/06 UKA_000.png", alt: "Samfundet", class: "br-1 bxs"
      %p= t("new_building.index.images.image_1")
    .half.ml-3.mr-2.flex-column.flex-align-center
      = image_tag "new_building/13 Mellomrommet 2_000.png", alt: "Samfundet", class: "br-1 bxs"
      %p= t("new_building.index.images.image_2")

  .samf-smart-box
    .half.mr-3.ml-2.flex-column.flex-align-center
      = image_tag "new_building/11 Klostergata inngang.png", alt: "Samfundet", class: "br-1 bxs"
      %p= t("new_building.index.images.image_3")
    .half.ml-3.mr-2.flex-column.flex-align-center
      = image_tag "new_building/18 Gr√∏nnbaren.png", alt: "Samfundet", class: "br-1 bxs"
      %p= t("new_building.index.images.image_4")

  #about.toc-list-scroll
  .samf-container.white.p-3.m-2.mt-3
    .flex-row.flex-align-center
      = image_tag "new_building/project.png", style: "width: 2.5em; height: 2.5em; background-size: contain;"
      %h1.ml-1.mt-1{id: "about"}= t("new_building.index.about.title")
    %div
      %p= simple_format(t("new_building.index.about.intro"))
      %i= simple_format(t("new_building.index.about.floor_plan"))
      %i= simple_format(t("new_building.index.about.financing_title"))
      %p= simple_format(t("new_building.index.about.financing"))

  .p-2

  #documents.toc-list-scroll
  .samf-container.white.p-3.m-2.mt-3
    .flex-row.flex-align-center
      %h1.mt-1{id: "documents"}= t("new_building.index.documents.title")
    %div
      %p= simple_format(t("new_building.index.documents.description"))
      .flex-row.wrap
        = link_to t("new_building.index.documents.process_plan_document"), target: "_blank" do
          .samf-button.small.m-1
            = t("new_building.index.documents.process_plan_title")
        - if page_by_name_en("new-building-archive") != "#"
          = link_to page_by_name_en("new-building-archive") do
            .samf-button.small.m-1
              = t("new_building.index.documents.resolutions_title")

  .p-2

  #history.toc-list-scroll
  .samf-container.white.p-3.m-2.mt-3
    .flex-row.flex-align-center
      = image_tag "new_building/history.png", style: "width: 2.5em; height: 2.5em; background-size: contain;"
      %h1.ml-1.mt-1{id: "history"}= t("new_building.index.history.title")
    %div
      - if I18n.locale == :no
        %p= simple_format(t("new_building.index.history.description"))
      - else
        %p= simple_format(t("new_building.index.history.intro"))
        %i= simple_format(t("new_building.index.history.nidelva_title"))
        %p= simple_format(t("new_building.index.history.nidelva"))
        %i= simple_format(t("new_building.index.history.rooms_title"))
        %p= simple_format(t("new_building.index.history.rooms"))
        %i= simple_format(t("new_building.index.history.paralell_assignment_title"))
        %p= simple_format(t("new_building.index.history.paralell_assignment_1"))
        %li <a href="https://drive.google.com/file/d/1QLk3M8HlYL1nVji1zE-2HFiABApqUHg3/view ", target="_blank">Du store verden - Skibnes arkitekter</a>
        %li <a href="https://drive.google.com/file/d/1umIrffZz2eCqwnhu05L8Lgvxxqg1OGlJ/view ", target="_blank">Sceneskifte - Eggen arkitekter</a>
        %li <a href="https://drive.google.com/file/d/1jH6K5e8F7UC7_y4rWjcXawzaskZCMW4T/view?usp=drive_open ", target="_blank">Merry Glow Red - Pir II arkitekter</a>
        %p= simple_format(t("new_building.index.history.paralell_assignment_2"),{} ,:sanitize => false)

  #faq.toc-list-scroll
  = render "FAQ"

  #contact.toc-list-scroll
  = render "contact_info"