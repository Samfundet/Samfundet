- set_open_graph_params({ title: t('site.index.og_title'), description: t('site.index.og_description'), image: 'https://www.samfundet.no/upload/images/image_files/000/001/669/original/logo_samf.no.png?1538501206'})
- set_twitter_params({ card: "summary_large_image", title: t('site.index.og_title'), description: t('site.index.og_description'), 'image:src' => 'https://www.samfundet.no/upload/images/image_files/000/001/669/original/logo_samf.no.png?1538501206'})


.pages-index

  .samf-smart-box.flex-align-center.mt-3

    .half.pr-3.m-3
      = image_tag "new_building/nybygg_kveld.png", alt: "Samfundet", class: "br-2 bxs"

    .auto.flex-column.flex-justify-center
      %div.pl-3
        %h1= t("new_building.index.title")
        %p
          = t("new_building.index.short_description")
        %p
          = t("new_building.index.long_description")

  .samf-container.white.p-3.m-2.mt-3
    .flex-row.flex-align-center
      = image_tag "new_building/progress.png", style: "width: 2.5em; height: 2.5em; background-size: contain;"
      %h1.ml-1.mt-1= t("new_building.index.progress.title")
    %div
      %p= simple_format(t("new_building.index.progress.description"))
      %i= simple_format(t("new_building.index.progress.decision"))

  .samf-smart-box.flex-align-center.mt-3.pt-3

    .auto.flex-column.flex-justify-center
      %div.pl-3
        %h1= t("new_building.index.approval.title")
        %p= t("new_building.index.approval.meeting")
        %p= simple_format(t("new_building.index.approval.background"))

    .half.pr-3.m-3.flex-row.flex-align-center
      = image_tag "new_building/01 Elgeseter.png", alt: "Samfundet", class: "br-1 bxs"

  .samf-container.red.flex-column.flex-align-center.m-3
    %h1.mt-3= t("new_building.index.social.title")
    %p= t("new_building.index.social.body")
    %div.flex-row
      = link_to "https://www.facebook.com/nybygg.samfundet" do
        .samf-button.blue.m-3
          = "facebook"
      = link_to "https://www.instagram.com/nybygg.samfundet/" do
        .samf-button.white.m-3
          = "instagram"

  .samf-container.white.p-3.m-3
    .flex-row.flex-align-center
      = image_tag "new_building/progress.png", style: "width: 2.5em; height: 2.5em; background-size: contain;"
      %h1.ml-1.mt-1= t("new_building.index.about.title")
    %div
      %p= simple_format(t("new_building.index.about.intro"))
      %i= simple_format(t("new_building.index.about.financing_title"))
      %p= simple_format(t("new_building.index.about.financing"))
      %i= simple_format(t("new_building.index.about.applications_title"))
      %p= simple_format(t("new_building.index.about.applications"))

  .samf-smart-box
    .half.pr-3.m-3.flex-column.flex-align-center
      = image_tag "new_building/06 UKA_000.png", alt: "Samfundet", class: "br-1 bxs"
      %p= t("new_building.index.images.image_1")
    .half.pr-3.m-3.flex-column.flex-align-center
      = image_tag "new_building/13 Mellomrommet 2_000.png", alt: "Samfundet", class: "br-1 bxs"
      %p= t("new_building.index.images.image_2")

  .samf-smart-box
    .half.pr-3.m-3.flex-column.flex-align-center
      = image_tag "new_building/11 Klostergata inngang.png", alt: "Samfundet", class: "br-1 bxs"
      %p= t("new_building.index.images.image_3")
    .half.pr-3.m-3.flex-column.flex-align-center
      = image_tag "new_building/18 Gr√∏nnbaren.png", alt: "Samfundet", class: "br-1 bxs"
      %p= t("new_building.index.images.image_4")

  .samf-container.white.p-3.m-2.mt-3
    .flex-row.flex-align-center
      %h1.mt-1= t("new_building.index.documents.title")
    %div
      %p= simple_format(t("new_building.index.documents.description"))
      .flex-row
        =link_to t("new_building.index.documents.doc1") do
          .samf-button.small
            = t("new_building.index.documents.button1_title")
        .m-1
        =link_to t("new_building.index.documents.doc2") do
          .samf-button.small
            = t("new_building.index.documents.button2_title")